{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@monorepo-example/app1/feature-shell": [
        "libs/app1/feature-shell/src/index.ts"
      ],
      "@monorepo-example/app1/time/data-access": [
        "libs/app1/time/data-access/src/index.ts"
      ],
      "@monorepo-example/app1/time/feature": [
        "libs/app1/time/feature/src/index.ts"
      ],
      "@monorepo-example/app1/time/util": ["libs/app1/time/util/src/index.ts"],
      "@monorepo-example/app1/todo-list/data-access": [
        "libs/app1/todo-list/data-access/src/index.ts"
      ],
      "@monorepo-example/app1/todo-list/feature": [
        "libs/app1/todo-list/feature/src/index.ts"
      ],
      "@monorepo-example/app1/todo-list/ui": [
        "libs/app1/todo-list/ui/src/index.ts"
      ],
      "@monorepo-example/app1/todo-list/util": [
        "libs/app1/todo-list/util/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
